<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="zxx">
  <head>
    <%- include('partials/head') %>
    <title>Pariwisata | Pesona Badung</title>
  </head>
  <body>
    <%- include('partials/nav') %>

    <section
      class="breadcrumb-main pb-20 pt-14"
      style="background-image: url('https://images.unsplash.com/photo-1596273214323-a8486cce7c9b?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')"
    >
      <div
        class="section-shape section-shape1 top-inherit bottom-0"
        style="background-image: url(images/shape8.png)"
      ></div>
      <div class="breadcrumb-outer">
        <div class="container">
          <div class="breadcrumb-content text-center">
            <h1 class="mb-3">Pariwisata Terbaik</h1>
            <nav aria-label="breadcrumb" class="d-block">
              <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Beranda</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  Pariwisata
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
      <div class="dot-overlay"></div>
    </section>

    <section class="trending pt-6 pb-6 bg-lgrey">
      <div class="container">
        <div class="destination-list">
          <% wisatas.forEach(wisata => { %>
          <div
            class="trend-full bg-white rounded box-shadow overflow-hidden p-4 mb-4"
          >
            <div class="row">
              <div class="col-lg-4 col-md-3">
                <div class="trend-item2 rounded">
                  <a
                    href="/pariwisata/<%= wisata.title.toLowerCase().replace(/ /g, '-').replace(/[^\w-]+/g, '') %>"
                    style="
                      background-image: url('<%= wisata.image[0] %>');
                    "
                  ></a>
                  <div class="color-overlay"></div>
                </div>
              </div>
              <div class="col-lg-5 col-md-6">
                <div
                  class="trend-content position-relative text-md-start text-center"
                >
                  <h3 class="mb-1">
                    <a href="/pariwisata/<%= wisata.title.toLowerCase().replace(/ /g, '-').replace(/[^\w-]+/g, '') %>"><%= wisata.title %></a>
                  </h3>
                  <h6 class="theme mb-0">
                    <i class="icon-location-pin"></i> <%= wisata.map %>
                  </h6>
                </div>
              </div>
              <div class="col-lg-3 col-md-3">
                <div class="trend-content text-md-end text-center">
                  <div class="rating">
                    <span class="fa fa-star checked"></span
                    ><small><%= wisata.rating %></small>
                  </div>

                  <div class="trend-price my-2">
                    <span class="mb-0">Mulai Dari</span>
                    <h3 class="mb-0">
                      <%= wisata.price === '-' ? 'Gratis' : 'Rp. ' + wisata.price %>
                    </h3>
                    <small>Per Orang</small>
                  </div>
                  <a href="/pariwisata/<%= wisata.title.toLowerCase().replace(/ /g, '-').replace(/[^\w-]+/g, '') %>" class="nir-btn">Kunjungi</a>
                </div>
              </div>
            </div>
          </div>
          <% }); %> <% if (previous) { %>
          <div
            class="text-center"
            onclick="location.href='?page=<%= previous.page %>'"
          >
            <a class="nir-btn"
              ><i class="fa fa-long-arrow-alt-left"></i
            > Sebelumnya</a>
          </div>
          <% } %> <% if (next) { %>
          <div
            class="text-center"
            onclick="location.href='?page=<%= next.page %>'"
          >
            <a class="nir-btn"
              >Selanjutnya <i class="fa fa-long-arrow-alt-right"></i
            ></a>
          </div>
          <% } %>

          <script>
            function loadMore(page) {
              window.location.href = "?page=" + page;
            }
          </script>
        </div>
      </div>
    </section>

    <%- include('partials/footer') %>

    <div id="back-to-top">
      <a href="#"></a>
    </div>

    <script src="js/jquery-3.5.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/particles.js"></script>
    <script src="js/particlerun.js"></script>
    <script src="js/plugin.js"></script>
    <script src="js/main.js"></script>
    <script src="js/custom-swiper.js"></script>
    <script src="js/custom-nav.js"></script>
  </body>
</html>
